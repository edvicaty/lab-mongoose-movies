<h1>{{title}}</h1>
<br>
<form action="/movies/edit/{{_id}}" method="POST">
    <label for="title">Movie:
    </label>
    <input type="text" name="title" id="title" value="{{title}}">
    <br>
    <label for="genre">Genre:
    </label>
    <input type="text" name="genre" id="genre" value="{{genre}}">
    <br>
    <label for="plot">Plot:
    </label>
    <input type="text" name="plot" id="plot" value="{{plot}}">
    <br>
    <button type="submit">Send</button>
</form>
<a href="/">
    <h3>Return to Main Page</h3>
</a>